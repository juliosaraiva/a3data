# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

# All files
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 4

# Python files
[*.py]
indent_style = space
indent_size = 4
max_line_length = 88
trim_trailing_whitespace = true
insert_final_newline = true

# YAML files
[*.{yml,yaml}]
indent_style = space
indent_size = 2

# JSON files
[*.json]
indent_style = space
indent_size = 2

# JavaScript/TypeScript files
[*.{js,jsx,ts,tsx}]
indent_style = space
indent_size = 2

# HTML files
[*.{html,htm}]
indent_style = space
indent_size = 2

# CSS files
[*.{css,scss,sass}]
indent_style = space
indent_size = 2

# XML files
[*.xml]
indent_style = space
indent_size = 2

# Markdown files
[*.{md,markdown}]
trim_trailing_whitespace = false
indent_style = space
indent_size = 2

# Configuration files
[*.{toml,ini,cfg}]
indent_style = space
indent_size = 4

# Shell scripts
[*.{sh,bash,zsh}]
indent_style = space
indent_size = 2
end_of_line = lf

# Docker files
[{Dockerfile,Dockerfile.*}]
indent_style = space
indent_size = 4

# Makefile
[{Makefile,makefile,*.mk}]
indent_style = tab
indent_size = 4

# Requirements files
[requirements*.txt]
insert_final_newline = true
trim_trailing_whitespace = true

# Environment files
[.env*]
insert_final_newline = true
trim_trailing_whitespace = true

# Git files
[.git*]
insert_final_newline = true
trim_trailing_whitespace = true

# GitHub workflows
[.github/workflows/*.{yml,yaml}]
indent_style = space
indent_size = 2
